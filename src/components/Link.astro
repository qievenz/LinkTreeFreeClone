---
export interface Props {
	title: string;
	emoji?: string;
    href: string;
    iconSrc?: string;
    isBanner?: boolean;
}

const { title, emoji, href, iconSrc, isBanner } = Astro.props;
---

{
    isBanner && iconSrc ? (
        <a href={href} target="_blank" rel="noopener noreferrer" class="block flex justify-center">
            <img class="h-auto max-w-xs" src={iconSrc} alt={title} />
        </a>
    ) : (
        <div class="relative flex items-center space-x-3 rounded-lg border border-accent/30 bg-primary px-6 py-5 focus-within:ring-2 focus-within:ring-accent focus-within:ring-offset-2 focus-within:ring-offset-background hover:border-accent p-4 transition-colors">
            <div class="flex-shrink-0">
                {iconSrc ? (
                    <img class="h-10 w-10" src={iconSrc} alt={title} />
                ) : (
                    <span class="text-4xl">{emoji}</span>
                )}
            </div>
            <div class="min-w-0 flex-1">
                <a href={href} class="focus:outline-none" target="_blank" rel="noopener noreferrer">
                    <span class="absolute inset-0" aria-hidden="true"></span>
                    <p class="text-lg text-secondary-heading">{title}</p>
                </a>
            </div>
        </div>
    )
}